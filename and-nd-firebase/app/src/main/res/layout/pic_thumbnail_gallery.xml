<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/tvInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="20dp"
        android:text="Take a video of your receipt or take a video of your reaction after having saved your receipt! Then click done to get back to the origin screen."
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnIntendV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnIntendV"
        style="@style/ButtonColor"/>

    <Button
        android:id="@+id/btnReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        style="@style/ButtonColor"/>

</LinearLayout>
