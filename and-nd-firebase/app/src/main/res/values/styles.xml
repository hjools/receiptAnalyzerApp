<resources>

    <style name="FirebaseLoginTheme" parent="FirebaseUI">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/login</item>

        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
    </style>

    <style name="ReceiptTheme" parent="Theme.AppCompat.NoActionBar" >

        <item name="android:buttonStyle">@style/ButtonColor</item>

        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>

        <item name="android:textColorPrimary">@color/primaryText</item>
        <item name="android:textColorPrimaryInverse">@color/primaryText</item>
        <item name="android:textColorSecondary">@color/secondaryText</item>

        <item name="android:listDivider">@drawable/divider</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- change app title color -->
        <item name="android:textColorPrimary">@color/textTitle</item>
        <!-- changes context menu text color -->
        <item name="android:textColor">@color/primaryText</item>
        <!-- change overflow icon (three dots) color -->
        <item name="android:textColorSecondary">@color/textTitle</item>
    </style>

    <style name="ButtonColor" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/textTitle</item>
    </style>

</resources>
