<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_receipt_detail"
    android:orientation="vertical"
    android:elevation="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="86dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginBottom="30dp"
    app:cardUseCompatPadding="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@id/text_receipt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:text="@string/text_receipt_date"
            android:textColor="#ccc"
            android:textSize="15sp" />

        <TextView
            android:id="@id/text_receipt_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_receipt_date"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="@string/text_receipt_store"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@id/text_receipt_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_receipt_store"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="@string/text_receipt_amount"
            android:textSize="16sp" />

        <Button
            android:id="@+id/mapButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_receipt_amount"
            android:layout_alignStart="@+id/text_receipt_amount"
            android:layout_below="@+id/text_receipt_amount"
            android:onClick="onClick"
            android:text="Location" />

        <TextView
            android:id="@+id/text_instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/mapButton"
            android:layout_alignStart="@+id/mapButton"
            android:layout_below="@+id/mapButton"
            android:layout_marginTop="14dp"
            android:text="TextView"
            tools:text="Swipe down to get rid of this card." />

    </RelativeLayout>
</android.support.v7.widget.CardView>
