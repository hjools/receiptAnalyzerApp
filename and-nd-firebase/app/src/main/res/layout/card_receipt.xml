<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/view_card_receipt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="30sp">
            <TextView
                android:id="@+id/text_receipt_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_weight="2"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/text_receipt_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/text_receipt_store"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/text_receipt_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_receipt_amount"
                android:textColor="#ccc"
                android:textSize="15sp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
